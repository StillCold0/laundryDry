<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/asp"
    android:orientation="vertical"
    tools:context=".mKontrol">



    <EditText
        android:hint="Müşteri ID"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:textSize="30dp"
        android:id="@+id/musteriID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/mKontrol"
        android:background="#DACBA6"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kontrol Et" />

    <Button
        android:id="@+id/geri_don4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="60dp"
        android:background="#E4A7A7"
        android:text="geri dön"
        android:textSize="25dp" />


</LinearLayout>